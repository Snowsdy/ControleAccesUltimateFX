<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_RIGHT" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.snowsdy.controleAcces.client.controllers.TitleBarController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <FontAwesomeIcon id="fsBtn" fill="#008bff" iconName="EXPAND" onMouseClicked="#setFullScreen">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <effect>
            <DropShadow />
         </effect>
      </FontAwesomeIcon>
      <FontAwesomeIcon id="minBtn" fill="#eeee00" iconName="CIRCLE" onMouseClicked="#reduce">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <effect>
            <DropShadow />
         </effect>
      </FontAwesomeIcon>
      <FontAwesomeIcon id="maxBtn" fill="#35b910" iconName="CIRCLE" onMouseClicked="#maximise">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <effect>
            <DropShadow />
         </effect>
      </FontAwesomeIcon>
      <FontAwesomeIcon id="closeBtn" fill="#f52020" iconName="CIRCLE" onMouseClicked="#close">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <effect>
            <DropShadow />
         </effect>
      </FontAwesomeIcon>
   </children>
</HBox>
